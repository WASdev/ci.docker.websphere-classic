# Build step - download and install InstallationManagerKit
FROM registry.access.redhat.com/ubi8/ubi@sha256:70fc843d4eb70159799e065d2830726b884c93950f8891e263d6328af6141173
RUN dnf --disableplugin=subscription-manager install -y unzip

ARG IMZIP

RUN mkdir /work

WORKDIR /work

COPY $IMZIP /work/

RUN unzip -q $IMZIP -d /work/InstallationManagerKit && rm -f $IMZIP
