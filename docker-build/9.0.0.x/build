if [ $# != 3 ]; then
  echo "Usage: build <IBMid> <IBMid password> <IM download url>"
  exit 1
fi

IBM_ID=$1
IBM_PASSWORD=$2
IM_URL=$3

REPO="--build-arg REPO $4" || ''
PRODUCTID="--build-arg PRODUCTID $5" || ''"

docker build -t websphere-traditional:profile --build-arg IBMID=$IBM_ID --build-arg IBMID_PWD=$IBM_PASSWORD --build-arg IMURL="$IM_URL" "$PRODUCTID" "$REPO" . || exit $?
